<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.collection_select :location_id,
      @locations, 
      :id, 
      :name, 
      :include_blank => '-- Select a location --' %>
  </div>

  <h2>Requirements:</h2>
  <div id="requirements">
  <% @event.requirements.each do |requirement|%>
    <%= render 'requirement', :requirement => requirement %> 
  <% end %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update requirements" %>
  </div>
<% end %>
