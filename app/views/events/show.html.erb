<p id="notice"><%= notice %></p>
<h1><%=h @event.name %></h1>

<h3><%=h @event.location.name %>. 
    <%=h short_date_time @event.date %>
    <small><%=h link_to 'View Map', @event.location.map, :target => '_blank' %></small>
</h3>

<h2>Requirements</h2>

<table>
  <tr>
    <th>Item</th>
    <th>Requirement</th>
  </tr>

<% @requirements.each do |requirement| %>
  <tr>
    <td><%= requirement.item.name %></td>
    <td><%= requirement.qty %> <%= requirement.item.unit %></td>
    <td><%= link_to 'Make contribution', add_contribution_url(:id => @event.id,:req_id => requirement.id) %></td>
  </tr>
<% end %>
</table>

<table>
  <tr>
    <th>Event</th>
    <th>Qty</th>
    <th>Item</th>
    <th>Contributor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contributions.each do |contribution| %>
  <tr>
    <td><%= contribution.event.name %></td>
    <td><%= contribution.qty %></td>
    <td><%= contribution.item.name_and_unit %></td>
    <td><%= contribution.contributor %></td>
    <td><%= link_to 'Options', contribution %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
