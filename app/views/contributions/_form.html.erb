<%= form_for(@contribution) do |f| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

      <ul>
      <% @contribution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :qty %><br />
    <%= f.number_field :qty %>
  </div>
  <div class="field">
    <%= f.label :event %><br />
    <%= f.collection_select :event_id,
      @events, 
      :id, 
      :name, 
      :include_blank => '-- Select an event --' %>
  </div>
  <div class="field">
    <%= f.label :item %><br />
    <%= f.collection_select :item_id,
      @items, 
      :id, 
      :name, 
      :include_blank => '-- Select an item --' %>
  </div>
  <div class="field">
    <%= f.label :contributor %><br />
    <%= f.text_field :contributor %>
  </div>
  <div class="field">
    <%= f.label :req %><br />
    <%= f.check_box :req %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
