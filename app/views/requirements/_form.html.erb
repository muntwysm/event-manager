<%= form_for(@requirement) do |f| %>
  <% if @requirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@requirement.errors.count, "error") %> prohibited this requirement from being saved:</h2>

      <ul>
      <% @requirement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :qty %><br />
    <%= f.number_field :qty %>
  </div>
  <div class="field">
    <%= f.label :event %><br />
    <%= f.collection_select :event_id,
      @events, 
      :id, 
      :name, 
      :include_blank => '-- Select an event --' %>
  </div>
  <div class="field">
    <%= f.label :item %><br />
    <%= f.collection_select :item_id,
      @items, 
      :id, 
      :name, 
      :include_blank => '-- Select an item --' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
